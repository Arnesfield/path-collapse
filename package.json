{
  "name": "path-collapse",
  "version": "1.0.0",
  "description": "Collapse paths that are part of another path.",
  "keywords": [
    "path",
    "collapse",
    "resolve",
    "file",
    "folder",
    "directory"
  ],
  "homepage": "https://github.com/Arnesfield/path-collapse#readme",
  "bugs": {
    "url": "https://github.com/Arnesfield/path-collapse/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Arnesfield/path-collapse.git"
  },
  "license": "MIT",
  "author": "Jefferson Rylee <rylee.jeff385@gmail.com>",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": "./lib/index.js",
    "./package.json": "./package.json"
  },
  "main": "lib/index.js",
  "module": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "all": "concurrently -r --kill-others-on-fail",
    "build": "npm run all -- npm:bundle npm:check",
    "prebundle": "rimraf lib",
    "bundle": "rollup -c rollup.config.ts --configPlugin \"esbuild={target:'esnext'}\"",
    "check": "npm run all -- \"npm:lint -- --max-warnings 0\" \"tsc --skipLibCheck\"",
    "format": "npm run lint -- --fix && prettier -cw .",
    "lint": "eslint . --ext .js,.ts",
    "start": "npm run watch -- --environment NODE_ENV:development",
    "test": "npm run all -- mocha npm:check",
    "test:watch": "mocha -w",
    "watch": "npm run bundle -- -w --no-watch.clearScreen"
  },
  "devDependencies": {
    "@rollup/plugin-eslint": "^9.0.5",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/chai": "^4.3.14",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.12.7",
    "@typescript-eslint/eslint-plugin": "^7.6.0",
    "@typescript-eslint/parser": "^7.6.0",
    "chai": "^5.1.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "mocha": "^10.4.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "rollup": "^4.14.1",
    "rollup-plugin-dts": "^6.1.0",
    "rollup-plugin-esbuild": "^6.1.1",
    "rollup-plugin-node-externals": "^7.1.1",
    "rollup-plugin-output-size": "^1.3.0",
    "tslib": "^2.6.2",
    "tsx": "^4.7.2",
    "typescript": "^5.4.4"
  },
  "engines": {
    "node": ">=16"
  }
}
